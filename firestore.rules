rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users for all documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // User specific data
    match /users/{userId} {
      // Users can read and write to their own documents
      allow read, write, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Public roadmaps
    match /roadmaps/{roadmapId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User roadmaps
    match /userRoadmaps/{document} {
      allow read, write: if request.auth != null;
    }

    // Search history
    match /searchHistory/{document} {
      allow read, write: if request.auth != null;
    }
  }
}